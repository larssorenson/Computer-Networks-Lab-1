#include "myreminder.h"

void writeAlarm(int sig)
{
	struct timeval* time = (struct timeval*)malloc(sizeof(struct timeval));
	if(time)
	{
		gettimeofday(time, NULL);
		char* strTime = timeToString((int)(time->tv_sec));
		write(2, strTime, strlen(strTime));
		write(2, " ", 1);
		write(2, currentAlarm->reminder, strlen(currentAlarm->reminder));
		write(2, "\r\n", 2);
		currentAlarm = currentAlarm->next;
		setAlarm();
		
		free(strTime);
	}
	
}
